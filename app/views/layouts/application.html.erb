<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : 'BuzzAnalytics' %></title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <h1>BuzzAnalytics</h1>
      <div class="right">
        <% if user_signed_in? %>
          <%= link_to "Logout", :logout, method: :delete %>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
